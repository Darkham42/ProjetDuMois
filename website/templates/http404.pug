doctype html
html(lang="fr")
	head
		include common_head.pug
	body
		//- Header
		include common_header.pug

		//- Nav links
		nav.navbar.navbar-light.sticky-top.navbar-pdm
			div.container.d-flex.p-0.px-sm-3.align-items-center.justify-content-between
				div
					a.p-2.text-muted(href="/#summary") En ce moment
					a.p-2.text-muted(href="/#data") Données
				a.connect-osm.btn.btn-sm.btn-outline-secondary.text-truncate.ml-2(role="button")

		div.container
			//- Wide image
			a(href="/")
				img.w-100.rounded-lg(src="/images/404.png" title="Retour à l'accueil" alt="Erreur 404 : rien que le désert ici...")

			//- Where to go
			div.lead.text-center.m-5
				a(href="/") Accueil | Découvrir le projet du mois

	include common_footer.pug
