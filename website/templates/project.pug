//- Original template from https://getbootstrap.com/docs/4.5/examples/blog/
doctype html
html(lang="fr")
	head
		include common_head.pug
	body
		//- Header
		include common_header.pug

		//- Nav links
		nav.navbar.navbar-light.sticky-top.navbar-pdm
			div.container.d-flex.p-0.px-sm-3.align-items-center.justify-content-between
				div
					if !isActive
						a.p-2.text-muted(href="/#summary") En ce moment
					else
						a.p-2.text-muted(href="#contribute") Participer
						a.p-2.text-muted(href="#statistics") Statistiques
					a.p-2.text-muted(href="/#data") Données
				a.connect-osm.btn.btn-sm.btn-outline-secondary.text-truncate.ml-2(role="button")

		div.container.pb-5
			//- Project summary
			div#summary.jumbotron.p-4.p-md-5.mb-3.text-white.rounded.bg-dark
				div.text-center
					img.float-sm-none.float-md-right(src=icon alt="" width="130")
				div.col-md-8.px-0
					if isActive
						h1.display-4.font-italic= `En ce moment : ${title.toLowerCase()}`
					else
						h1.display-4.font-italic= title
						p.display-4.text-capitalize= new Date(start_date).toLocaleString('fr-FR', { month: 'long', year: 'numeric' })
					p.lead.my-3= summary
					p.lead.mb-0
						a.btn.btn-primary.btn-lg(role="button" href="#contribute") Participer

		div.container-fluid.py-5.mb-3.pdm-section-highlight
			//- Contribute
			div#contribute.container.blog-post
				h2.blog-post-title Participer
				div.btn-over-wide
					a.pdm-wide-link.map(href=`/projects/${id}/map`) Commencer à contribuer
					a.btn.btn-light
						i.fa.fa-expand
				div.mt-3!= howto
				div.btn-over-wide
					a.pdm-wide-link.books(href=links.osmwiki target="_blank") Documentation
					a.btn.btn-light
						i.fa.fa-book

		//- Statistics
		include stats.pug

		div.d-flex.align-items-start(style="max-height: 250px; overflow: hidden")
			img.w-100(src="/images/background.png")

		//- About
		footer.blog-footer
			div.container.text-left
				div.row
					div#about.blog-post.col-md-8
						include:markdown-it ../../README.md
					aside.col-md-4.blog-sidebar
						div.p-4.mb-3.rounded
							if past
								h4.font-italic Projets passés
								ol.list-unstyled
									each pastProj in projects
										li: a(href=`/projects/${pastProj.id}`)= pastProj.label
									li: a(href="https://wiki.openstreetmap.org/wiki/FR:Project_of_the_month#Projets_pass.C3.A9s" rel="noopener") Davantage sur le wiki OSM
							h4.font-italic En savoir plus
							ul.list-unstyled.mb-0
								li: a(href=CONFIG.REPOSITORY_URL rel="noopener") Code source du projet
								li: a(href="https://openstreetmap.fr" rel="noopener") OpenStreetMap France
