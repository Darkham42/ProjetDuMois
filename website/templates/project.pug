//- Original template from https://getbootstrap.com/docs/4.5/examples/blog/
doctype html
html(lang="fr")
	head
		include common_head.pug
	body
		div.container
			//- Header
			include common_header.pug

			//- Nav links
			div.nav-scroller.py-1.mb-2
				nav.nav.d-flex.justify-content-between
					a.p-2.text-muted(href="/#summary") Ce mois-ci
					a.p-2.text-muted(href="/#about") Ã€ propos

			//- Project summary
			div#summary.jumbotron.p-4.p-md-5.text-white.rounded.bg-dark
				div.col-md-8.px-0
					h1.display-4.font-italic= title
					p.display-4.text-capitalize= new Date(start_date).toLocaleString('fr-FR', { month: 'long', year: 'numeric' })
					p.lead.my-3= summary

		main.container(role="container")
			div.blog-main
				//- Statistics
				include stats.pug

		//- Footer
		include common_footer.pug
